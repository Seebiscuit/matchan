{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: Launch",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Next.js: Build & Start",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start:fresh"
      ],
      "env": {
        "NODE_ENV": "production"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Prisma Studio",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "prisma:studio"
      ],
      "console": "integratedTerminal"
    }
  ]
} 