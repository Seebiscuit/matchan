generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  name           String?
  password       String
  role           UserRole @default(USER)
  isApproved     Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  createdSingles Single[] @relation("CreatedSingles")
  updatedSingles Single[] @relation("UpdatedSingles")
}

model Single {
  id                   String                 @id @default(cuid())
  firstName            String
  lastName             String
  email                String?
  phoneNumber          String                 @unique
  gender               Gender
  dateOfBirth          DateTime
  imageId              String?                @unique
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
  createdById          String
  imageUrl             String?
  updatedById          String
  createdBy            User                   @relation("CreatedSingles", fields: [createdById], references: [id])
  updatedBy            User                   @relation("UpdatedSingles", fields: [updatedById], references: [id])
  SingleAdditionalData SingleAdditionalData[]
  tags                 Tag[]                  @relation("SingleToTag")
}

model Tag {
  id      String   @id @default(cuid())
  name    String   @unique
  singles Single[] @relation("SingleToTag")
}

model SingleAdditionalData {
  id                        String                    @id
  singleId                  String
  fieldId                   String
  value                     String
  createdAt                 DateTime                  @default(now())
  updatedAt                 DateTime
  SingleAdditionalDataField SingleAdditionalDataField @relation(fields: [fieldId], references: [id])
  Single                    Single                    @relation(fields: [singleId], references: [id], onDelete: Cascade)

  @@unique([singleId, fieldId])
}

model SingleAdditionalDataField {
  id                   String                 @id
  name                 String                 @unique
  label                String
  type                 DataFieldType
  required             Boolean                @default(false)
  options              String[]
  createdAt            DateTime               @default(now())
  updatedAt            DateTime
  SingleAdditionalData SingleAdditionalData[]
}

enum UserRole {
  ADMIN
  USER
}

enum Gender {
  MALE
  FEMALE
}

enum DataFieldType {
  TEXT
  NUMBER
  DATE
  SELECT
  BOOLEAN
}
